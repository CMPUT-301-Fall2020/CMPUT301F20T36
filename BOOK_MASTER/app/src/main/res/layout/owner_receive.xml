<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/image4"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/owner_receive_name"
        android:layout_width="251dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:background="#CCFFFFFF"
        android:text="                              Owner"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Owner_receive_ISBNbutton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/button_s"
        android:text="Scan ISBN"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owner_receive_name" />

    <Button
        android:id="@+id/Owner_receive_CofirmButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="404dp"
        android:background="@drawable/button_s"
        android:text="Confirm"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owner_receive_name" />

    <TextView
        android:id="@+id/ISBN_Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="76dp"
        android:background="#CCFFFFFF"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/Owner_receive_CofirmButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Owner_receive_ISBNbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>