<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/image1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">


    <TextView
        android:id="@+id/search_page_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="                 BookMaster"
        android:textColor="#000000"
        android:textSize="30sp" />

    <include
        android:id="@+id/search_page_include"
        layout="@layout/search_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/search_page_desc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#CCFFFFFF"
        android:text="Books                                Descriptions                             Borrow       "
        android:textColor="#000000" />

    <ListView
        android:id="@+id/search_page_booklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC3A3B3C"
        android:baselineAligned="false"
        tools:layout_conversion_absoluteHeight="731dp"
        tools:layout_conversion_absoluteWidth="411dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </ListView>

</LinearLayout>
