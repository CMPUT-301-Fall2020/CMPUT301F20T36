<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/image3"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/BookTitle"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:background="#D9D4D5D6"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="18sp"
        android:gravity="center"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BookAuthor"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:background="#D9D4D5D6"
        android:gravity="center"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="2dp"

        android:text="Author"

        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookTitle" />

    <TextView
        android:id="@+id/BookStatus"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="#80d4d5d6"

        android:gravity="center"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="2dp"
        android:text="Status"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookAuthor" />

    <TextView
        android:id="@+id/BookISBN"
        android:layout_width="202dp"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:background="#80D4D5D6"
        android:text="ISBN"
        android:gravity="center"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="2dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookStatus" />

    <TextView
        android:id="@+id/Book_Borrower"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:text="Borrower"
        android:gravity="center"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="2dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookISBN" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/add_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_s"
        android:text="Delete"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_description_imagineRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:layout_marginTop="14dp"
        android:background="#D9424343"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Book_Borrower" />

    <Button
        android:id="@+id/Edit_book_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_s"
        android:text="Edit"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>