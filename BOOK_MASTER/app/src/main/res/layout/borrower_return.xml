<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image2">

    <Button
        android:id="@+id/borrrower_return_ISBNbutton"
        android:layout_width="129dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_s"
        android:text="Scan ISBN"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Borrower_return_deliverButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Borrower_return_deliverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_s"
        android:text="Hand Over"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/borrower_return_BookTitle"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="2dp"
        android:background="#80FFFFFF"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/borrower_return_Title_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/borrower_return_BookAuthor"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="2dp"
        android:background="#80FFFFFF"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Author"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/borrower_return_Author_description"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_BookTitle" />

    <TextView
        android:id="@+id/borrower_return_BookStatus"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="2dp"
        android:background="#80FFFFFF"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Status"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/borrower_return_Status_description"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_BookAuthor" />

    <TextView
        android:id="@+id/borrower_return_BookISBN"
        android:layout_width="202dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="2dp"
        android:background="#80FFFFFF"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="ISBN"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/borrower_return_ISBN_description"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_BookStatus" />

    <TextView
        android:id="@+id/borrower_return_Owner"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:text="Owner"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/borrower_return_owner_description"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_BookISBN" />

    <TextView
        android:id="@+id/borrower_return_Borrower"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:text="Borrower"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/borrower_return_borrower_description"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_Owner" />

    <TextView
        android:id="@+id/borrower_return_Title_description"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="18sp"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/borrower_return_Author_description"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Author"
        android:textSize="18sp"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_Title_description" />


    <TextView
        android:id="@+id/borrower_return_Status_description"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:text="Status"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_Author_description" />

    <TextView
        android:id="@+id/borrower_return_ISBN_description"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:text="ISBN"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_Status_description" />

    <TextView
        android:id="@+id/borrower_return_owner_description"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:text="Owner"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_ISBN_description" />

    <TextView
        android:id="@+id/borrower_return_borrower_description"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Borrower"
        android:textSize="18sp"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borrower_return_owner_description" />
</androidx.constraintlayout.widget.ConstraintLayout>