<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3CFFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_message_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="                 BookMaster"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/search_page_desc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Sender                                Descriptions                             Books       " />

    <ListView
        android:id="@+id/show_message_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5A5858" />

</LinearLayout>