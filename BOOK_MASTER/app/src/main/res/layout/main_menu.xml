<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image1">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/buttonshape"
        android:text="  BookMaster"
        android:textColor="#FF000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape2"
        android:text="  Hello, CMPUT301"
        android:textColor="#FF000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="280dp"
        android:layout_height="26dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:text="    What do you want to do today?"
        android:textColor="#FF000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <Button
        android:id="@+id/Logout_main_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:background="@drawable/button_s"
        android:text="Log Out"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Borrow_main_button" />

    <Button
        android:id="@+id/Borrow_main_button"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_s"
        android:drawableTop="@drawable/icon_isbn"
        android:paddingTop="10sp"
        android:text="Scan ISBN"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Search_main_button" />

    <Button
        android:id="@+id/Search_main_button"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_s"
        android:drawableTop="@drawable/icon_search"
        android:paddingTop="10sp"
        android:text="Search"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/view_profile_button"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="48dp"
        android:paddingTop="10sp"
        android:background="@drawable/button_s"
        android:text="My Account"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toStartOf="@+id/Search_main_button"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:drawableTop="@drawable/icon_account"/>

    <Button
        android:id="@+id/main_menu_request"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/button_s"
        android:drawableTop="@drawable/icon_request"
        android:paddingTop="10sp"
        android:text="My Request"
        android:textColor="#FF000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_button" />

    <include
        android:id="@+id/main_menu_bar"
        layout="@layout/main_menu_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#CCC3BBBB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>