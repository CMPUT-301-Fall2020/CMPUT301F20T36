<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCD3CFCF">

    <TextView
        android:id="@+id/Request_list_bookname"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:text="BookName"
        android:maxLines="1"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="2dp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Request_list_sender"
        android:layout_width="410dp"
        android:layout_height="34dp"
        android:layout_marginTop="1dp"
        android:text="sender"
        android:maxLines="1"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="2dp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <TextView
        android:id="@+id/Borrower_desc"
        android:layout_width="264dp"
        android:layout_height="60dp"
        android:text="Description"
        android:maxLines="4"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="2dp"
        android:gravity="left"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/Request_list_status"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <TextView
        android:id="@+id/Request_list_status"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:text="Status"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="395dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#000000"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:background="#969696"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Request_list_bookname" />

    <TextView
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="410dp"
        android:layout_height="1dp"
        android:background="#969696"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Request_list_sender" />

</androidx.constraintlayout.widget.ConstraintLayout>